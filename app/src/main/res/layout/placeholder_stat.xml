<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp">

    <View
        android:id="@+id/local_stat_shimmer"
        android:layout_width="130sp"
        android:layout_height="16dp"
        android:background="@color/navyBlue"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </View>

    <LinearLayout
        android:id="@+id/local_row_one_shimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="18dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/local_stat_shimmer"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/placeholder_stat_box" />
        <include layout="@layout/placeholder_stat_box" />
        <include layout="@layout/placeholder_stat_box" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/local_two_one_shimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="18dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/local_row_one_shimmer"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/placeholder_stat_box" />
        <include layout="@layout/placeholder_stat_box" />
        <include layout="@layout/placeholder_stat_box" />

    </LinearLayout>

    <View
        android:id="@+id/global_stat_shimmer"
        android:layout_width="135sp"
        android:layout_height="16dp"
        android:background="@color/navyBlue"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/local_two_one_shimmer" >
    </View>

    <LinearLayout
        android:id="@+id/global_row_one_shimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="18dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/global_stat_shimmer"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/placeholder_stat_box" />
        <include layout="@layout/placeholder_stat_box" />
        <include layout="@layout/placeholder_stat_box" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

