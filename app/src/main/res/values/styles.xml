<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryDark">@color/midnightBlue</item>
        <item name="colorAccent">@color/midnightBlue</item>
        <item name="android:statusBarColor">@color/midnightBlue</item>
        <item name="android:windowBackground">@color/midnightBlue</item>
        <item name="android:navigationBarColor">@color/midnightBlue</item>
        <item name="android:textColorPrimary">@color/pureWhite</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="nav_drawer_menu_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:height">48dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
